@model IEnumerable<KendoDemo.ViewModel.MainMenuViewModel>
@{
    ViewBag.Title = "Main Menu";
}
<h2>
    Menu: Main Mode</h2>
<div id="basicMainMenuZone">
    <div id="basicMainMenuForm">
        <div>
            @(Html.Kendo().Menu()
      .Name("ObjMainMenu")
      .BindTo(Model, mappings =>
      {
          mappings.For<KendoDemo.ViewModel.MainMenuViewModel>(binding => binding
                    .ItemDataBound((item, menu) =>
                    {
                        item.Text = menu.MenuText;
                        item.ImageUrl = menu.MenuImageUrl;
                        item.Url = menu.MenuUrl;
                        item.SpriteCssClasses = menu.MenuSpriteCssClass;
                    })
                    .Children(menu => menu.SubMenuViewModels));
          mappings.For<KendoDemo.ViewModel.MainMenuViewModel>(binding => binding
                    .ItemDataBound((item, subMenu) =>
                    {
                        item.Text = subMenu.MenuText;
                        item.ImageUrl = subMenu.MenuImageUrl;
                        item.Url = subMenu.MenuUrl;
                        item.SpriteCssClasses = subMenu.MenuSpriteCssClass;
                    }));
      })
)
        </div>
    </div>
</div>
